<section class="container-fluid">
  <div class="container-fluid py-5 h-100">
    <h2
      style="
        text-align: center;
        letter-spacing: 2px;
        word-spacing: 2px;
        margin-bottom: 40px;
      "
    >
      Signup Fast and Build Good Habits
    </h2>
    <div class="row d-flex justify-content-center">
      <div class="col-md-9 col-lg-8 col-xl-7">
        <img
          src="/images/2.jpeg"
          class="img-fluid"
          alt="Sampleimage"
          style="border: 1px solid red"
          width="100%"
        />
      </div>
      <div class="col-md-9 col-lg-8 col-xl-4">
        <form action="/user/signingup" method="post">
          <!-- Email input -->
          <div class="form-outline mb-4">
            <label class="form-label" for="form1">Email address</label>
            <input
              type="email"
              id="form1"
              class="form-control form-control-lg"
              placeholder="Enter email address"
              required
              name="email"
            />
          </div>

          <!-- Password input -->
          <label class="form-label" for="form11">Password</label>
          <div class="form-outline mb-4">
            <input
              type="password"
              id="form11"
              class="form-control form-control-lg"
              placeholder="Enter Password"
              required
              name="pass"
            />
          </div>

          <!-- Submit button -->
          <div class="text-center text-lg-start mt-4 pt-2">
            <button type="submit" class="btn btn-primary btn-lg btn-block">
              Sign Up
            </button>

            <p class="small fw-bold mt-2 pt-1 mb-0">
              Already Have an account?
              <a href="/user/login" class="link-danger"> Login </a>
            </p>
            <p class="big fw-bold mt-2 pt-1 mb-0">or</p>
            <p class="small fw-bold mt-2 pt-1 mb-0">
              <a href="/" class="link-danger"> Go Back </a>
            </p>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
